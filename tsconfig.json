{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext","dom"],
    "outDir": "lib",
    "jsx":"react",
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "allowJs": true,
    "experimentalDecorators":true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "router": ["./node_modules/@reach/router/index.js"]
    },
  },
  "include": [
    "typings/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compileOnSave": false
}
